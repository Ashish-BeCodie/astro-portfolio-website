---
import { Briefcase, ChevronRight } from "react-feather";
import { Projects } from "../core/_data/projectsDataService";
import { Project } from "../core/_types/project";

const latestProjects: Project[] = Projects.slice(0,3)
---

<div class="rounded-xl border border-black/5 py-5 px-6 dark:border-white/5">
  <strong
    class="mb-1 flex items-center font-normal space-x-2 text-xs uppercase text-black/70 dark:text-white/70"
  >
    <Briefcase size={16} />
    <span class="ml-2">Latest Projects</span>
  </strong>

  {
    latestProjects.length ? (
      <>
        {latestProjects.map((project: Project) => (
          <a
            href={'/projects/'+project.slug}
            class="flex cursor-pointer items-center justify-between space-x-2 border-b border--black/5 py-4 text-sm last-of-type:pb-0 last-of-type:border-0 hover:opacity-75 dark:border-white/5"
          >
            <div>
              <strong class="font-medium text-black dark:text-white">
                {project.title}
              </strong>
              <p class="text-xs text-black/70 dark:text-white/70">
                {project.excerpt}
              </p>
            </div>
            <div class="text-black/50 dark:text-white/50">
              <ChevronRight size={16} />
            </div>
          </a>
        ))}
      </>
    ) : (
      <p>No projects added yet!</p>
    )
  }
</div>
